<% include ./partials/header %>

    <div id="container">

      <div id="taskNameAndInput">
        <form class="ui form" id="taskForm" action="/tasks/<%=task._id%>?_method=PUT" method="POST">
          <div class="field">
            <input id="submitTask" name="task[task]" type="text" placeholder="<%= task.task %>">
          </div>
          <div class="field">
            <h1 id="timer"><%= task.timer %></h1>
          </div>
          <div class="field">
            <input class="ui violet basic button" type="submit" value="Save">
          </div>
        </form>
      </div>

    </div>

  </body>
</html>
